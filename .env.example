# Example .env file for DCA Backtester

# CDP AgentKit API credentials
CDP_API_KEY_ID=your_cdp_api_key_id_here
CDP_PRIVATE_KEY=your_cdp_private_key_here

# CryptoCompare API key (required for price data)
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here

# Optional: OpenAI API key for AI insights
OPENAI_API_KEY=your_openai_api_key_here

# Network configuration (defaults are usually fine)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
CHAIN_ID=84532

# Risk management (optional overrides)
MAX_DAILY_SPEND_USD=1000.0
MAX_GAS_PERCENTAGE=1.0
SPEND_RESET_HOURS=24