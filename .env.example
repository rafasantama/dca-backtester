# DCA Backtester Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# =============================================================================
# CDP AgentKit Configuration (Required for Live Execution)
# =============================================================================
# Get these from: https://portal.cdp.coinbase.com/
CDP_API_KEY_ID=your_cdp_api_key_id_here
CDP_PRIVATE_KEY=-----BEGIN EC PRIVATE KEY-----\nyour_cdp_private_key_here\n-----END EC PRIVATE KEY-----

# =============================================================================
# API Keys (Optional - for enhanced features)
# =============================================================================
# CryptoCompare API (for backtesting price data)
# Get free key from: https://cryptocompare.com/
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here

# OpenAI API (for AI analysis features)
# Get from: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Network Configuration (Advanced - Default values work for most users)
# =============================================================================
# Base Sepolia testnet RPC URL
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Base Sepolia Chain ID (don't change unless you know what you're doing)
CHAIN_ID=84532

# =============================================================================
# Risk Management Limits (Recommended defaults provided)
# =============================================================================
# Maximum daily spending limit in USD
MAX_DAILY_SPEND_USD=1000.0

# Maximum gas cost as percentage of transaction value (1.0 = 1%)
MAX_GAS_PERCENTAGE=1.0

# Rolling spend limit reset window in hours
SPEND_RESET_HOURS=24

# =============================================================================
# Development Settings (Optional)
# =============================================================================
# Enable debug logging
DEBUG=false

# Mock mode (set to true to use simulated transactions)
MOCK_MODE=false